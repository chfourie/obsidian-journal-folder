{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"types": ["svelte", "node"],
		"baseUrl": ".",
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES2020",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": [
			"DOM",
			"ES2020"
		],
		"paths": {
			"@journal-folder/features/journal-header": [
				"libs/features/journal-header/index.ts"
			],
			"@journal-folder/data-access": [
				"libs/data-access/index.ts"
			],
			"@journal-folder/ui": [
				"libs/ui/index.ts"
			],
			"@journal-folder/plugin": [
				"libs/plugin/index.ts"
			]
		}
	},
	"include": [
		"**/*.ts"
	]
}
